  body
    script.
      function mostrarContrasena(){
        var tipo = document.getElementById("password");
        if(tipo.type == "password"){
          tipo.type = "text";
        }else{
          tipo.type = "password";
        }
      }  
    header

  .padre
    .contenedor_form
      form(action='/VPFcrearUsuario' method='POST')
        //input.form-control(type='hidden', value=mascota.idMascota, name="IdMascota")
        input.form-control(type='hidden', value=0, name="IdUsuario")
        h2 Datos del Usuario
        
        .form-group
          label(for='') Nombre personal
          br
          input.form-control(required ,type='text', value, name="nombrePersonal")
        .form-group
          label(for='') Nombre de usuario
          br
          input.form-control(required, type='username', value="", name="userName")
        .form-group
          label(for='') Contraseña
          br
          input.form-control(required, type='password', value="", name="password", id="password")
          button.btn.btn-primary(class="info" type='button' onclick='mostrarContrasena()') Mostrar Contraseña
        .form-group
          label(for='') Edad
          br
          input.form-control(type='number' min="14" max="100" name="edad")
          label(for='') telefono
          br
          input.form-control(required ,type='tel', value, name="telefono", pattern="[0-9]{10}")
        .form-group
          label(for='') Direccion
          br
          input.form-control(required, type='text', value, name="direccion")          
        button(class="btn nuevo",type='submit') Crear usuario     
      form(action='/VPF/' method='GET') 
        input.form-control(type='hidden', value=IdUsuario, name="IdUsuario")
        button(class="btn cancelar",type='submit') Cancelar        
      
      
